<%= render 'search_form' %>
<hr>
<h3>Resultado da busca por <%= @smarts %></h3>
<p><%= @molecules.count %> encontrados</p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Desenho</th>
      <th>Massa Molecular</th>
      <th>Número de átomos</th>
      <th>HBD</th>
      <th>Smiles</th>
    </tr>
  </thead>
  <tbody>
    <%- @molecules.each do |m| %>
    <tr>
      <td><%= link_to "Ver molécula", print_path(m), class: 'nobr' %></td>
      <td><%= '%.2f' % m.exact_mass %></td>
      <td><%= m.count %></td>
      <td><%= BaseService::Filters::HydrogenBondDonor.hbd(m) %></td>
      <td><%= m %></td>
    </tr>
    <%- end %>
  </tbody>
</table>
